<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.minibox.dao.ReservationMapper">
    <resultMap id="reservation" type="com.minibox.po.Reservation">
        <id property="reservationId" column="reservation_id"/>
        <result property="userId" column="user_id"/>
        <result property="openTime" column="open_time"/>
        <result property="useTime" column="use_time"/>
        <result property="userName" column="user_name"/>
        <result property="phoneNumber" column="phone_number"/>
        <result property="position" column="position"/>
        <result property="boxId" column="box_id"/>
        <result property="boxSize" column="box_size"/>
        <result property="delFlag" column="del_flag" javaType="java.lang.Integer"/>
        <result property="expFlag" column="exp_flag" javaType="java.lang.Integer"/>
</resultMap>

    <sql id="reservation_column">
        reservation_id,user_id,open_time,use_time,user_name,phone_number,position,box_id,box_size,del_flag,exp_flag
    </sql>

    <insert id="insertReservation" parameterType="com.minibox.po.Reservation">
        INSERT INTO reservation_info(open_time,user_id,use_time,user_name,phone_number,position,box_id,box_size)
        VALUES (#{openTime},#{userId},#{useTime},#{userName},#{phoneNumber},#{position},#{boxId},#{boxSize})
    </insert>

    <update id="removeReservation" parameterType="java.lang.Integer">
        UPDATE reservation_info SET del_flag='1' WHERE reservation_id=#{reservationId}
    </update>

    <update id="updateReservation" parameterType="com.minibox.po.Reservation">
        UPDATE reservation_info
        <set>
            <if test="openTime!=null">
                open_time=#{openTime},
            </if>
            <if test="useTime!=null">
                use_time=#{useTime},
            </if>
            <if test="userName!=null">
                user_name=#{userName},
            </if>
            <if test="phoneNumber!=null">
                phone_number=#{phoneNumber},
            </if>
            <if test="position!=null">
                position=#{position}
            </if>
        </set>
        WHERE reservation_id=#{reservationId}
    </update>

    <select id="findAllReservations" resultMap="reservation">
        SELECT * FROM reservation_info
    </select>

    <select id="findReservations" parameterType="java.lang.String" resultMap="reservation">
        SELECT
        <include refid="reservation_column"/>
        FROM reservation_info WHERE user_name=#{userName}
    </select>

    <select id="findReservationsByUserId" parameterType="java.lang.InternalError" resultMap="reservation">
        SELECT * FROM reservation_info WHERE user_id=#{userId}
    </select>

    <select id="findReservationByReservationId" parameterType="java.lang.Integer" resultMap="reservation">
        SELECT * FROM reservation_info WHERE reservation_id=#{reservationId}
    </select>

    <update id="updateReservationExpFlag">
        update reservation_info,user_info SET exp_flag='1',credibility=credibility-10
        WHERE now() > DATE_ADD(open_time, INTERVAL reservation_info.use_time HOUR)
        AND user_info.user_id=reservation_info.user_id;
     </update>
</mapper>