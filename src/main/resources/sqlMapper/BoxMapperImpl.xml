<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.minibox.dao.BoxMapper">
    <resultMap id="box" type="com.minibox.po.Box">
        <id property="boxId" column="box_id"/>
        <result property="boxSize" column="box_size"/>
        <result property="boxStatus" column="box_status"/>
        <result property="groupId" column="group_id"/>
    </resultMap>

    <resultMap id="group" type="com.minibox.po.GroupPo">
        <id property="groupId" column="group_id"/>
        <result property="quantity" column="quantity"/>
        <result property="empty" column="empty"/>
        <result property="lng" column="lng"/>
        <result property="lat" column="lat"/>
        <result property="position" column="position"/>
    </resultMap>

    <resultMap id="order" type="com.minibox.po.Order">
        <id property="orderId" column="order_id"/>
        <result property="userId" column="user_id"/>
        <result property="groupId" column="group_id"/>
        <result property="boxId" column="box_id"/>
        <result property="orderTime" column="order_time" jdbcType="TIMESTAMP" javaType="java.lang.String"/>
        <result property="delFlag" column="del_flag" javaType="java.lang.Integer"/>
    </resultMap>

    <sql id="box_columns">
        box_id,box_size,box_status,group_id
    </sql>

    <sql id="order_column">
        user_id,group_id,box_id,order_time
    </sql>

    <sql id="order_colum_all">
        order_id,user_id,group_id,box_id,order_time,delFlag
    </sql>

    <sql id="group_columns">
        group_id,quantity,empty,lng,lat,position
    </sql>

    <select id="findGroupsByDestination" parameterType="java.lang.String" resultMap="group">
        SELECT <include refid="group_columns"/>
        FROM group_info
        WHERE position LIKE #{destination}
    </select>

    <select id="findAllGroup" resultMap="group">
        SELECT <include refid="group_columns"/>
        from group_info
    </select>

    <select id="findGroupByGroupId" parameterType="java.lang.Integer" resultMap="group">
        SELECT <include refid="group_columns"/>
        from group_info
        WHERE group_id=#{groupId}
    </select>

    <update id="reduceGroupBoxNum">
        UPDATE group_info set empty=empty-#{num} WHERE group_id=#{groupId}
    </update>

    <update id="addGroupBoxNum" parameterType="java.lang.Integer">
        UPDATE group_info SET empty=empty+#{boxNum} WHERE group_id=#{groupId}
    </update>

    <select id="findOrderByOrderId" parameterType="java.lang.Integer" resultMap="order">
        SELECT <include refid="order_colum_all"/>
        FROM order_info
        WHERE order_id=#{orderId}
    </select>

    <select id="findBoxByBoxId" parameterType="java.lang.Integer" resultMap="box">
        SELECT <include refid="box_columns"/> FROM box_info WHERE box_id=#{boxId}
    </select>

    <select id="findUsingBoxes" parameterType="java.lang.Integer" resultMap="box">
        SELECT <include refid="box_columns"/> from box_info WHERE box_id IN (SELECT box_id from order_info where user_id=#{userId} AND del_flag=0)
    </select>

    <select id="findReservingBoxed" parameterType="java.lang.Integer" resultMap="box">
        select <include refid="box_columns"/> from box_info WHERE box_id IN (SELECT box_id from reservation_info WHERE user_id=#{userId} and exp_flag=0)
    </select>

    <select id="findEmptySmallBox" parameterType="java.lang.Integer" resultMap="box">
        SELECT <include refid="box_columns"/>
        FROM box_info
        WHERE box_size='小' AND group_id=#{groupId} AND box_status=0
    </select>

    <select id="findEmptySmallBoxCount" parameterType="java.lang.Integer" resultType="java.lang.Integer">
        SELECT count(box_id) from box_info WHERE box_size='小' AND group_id=#{groupId} AND box_status=0
    </select>

    <select id="findLargeBox" parameterType="java.lang.Integer" resultMap="box">
        SELECT <include refid="box_columns"/>
        FROM box_info
        WHERE box_size='大' AND group_id=#{groupId} AND box_status=0
    </select>

    <select id="findEmptyLargeBoxCount" parameterType="java.lang.Integer" resultType="java.lang.Integer">
        SELECT count(box_id) FROM box_info WHERE box_size='大' AND group_id=#{groupId} and box_status=0
    </select>

    <select id="findEmptyBoxes" resultMap="box">
        SELECT <include refid="box_columns"/> from box_info WHERE group_id=#{groupId} AND box_status='0' AND box_size=#{boxSize}
    </select>

    <select id="findBoxesByGroupId" parameterType="java.lang.Integer" resultMap="box">
        SELECT <include refid="box_columns"/> FROM box_info WHERE group_id=#{groupId}
    </select>

    <select id="findOrderByBoxId" parameterType="java.lang.Integer" resultMap="order">
        select <include refid="order_colum_all"/> from order_info WHERE box_id=#{boxId} AND del_flag=0
    </select>

    <insert id="insertOrder" parameterType="com.minibox.po.Order">
        INSERT INTO order_info(user_id,group_id,box_id,order_time) VALUES (#{userId},#{groupId},#{boxId},now())
    </insert>

    <insert id="insertSaleInfo" parameterType="com.minibox.po.Sale" >
        INSERT INTO sale_info(user_id,box_id,group_id,pay_time,order_time,cost) VALUES (#{userId},#{boxId},#{groupId},now(),#{orderTime},#{cost})
    </insert>

    <update id="removeOrder" parameterType="java.lang.Integer">
       UPDATE order_info SET del_flag='1' WHERE order_id=#{orderId}
    </update>

    <update id="updateBoxStatus" parameterType="java.lang.Integer">
         UPDATE box_info set box_status=
 case
     when box_status=1 then '0'
     when box_status=0 then '1'
 end
 where box_id=#{boxId}
    </update>
</mapper>